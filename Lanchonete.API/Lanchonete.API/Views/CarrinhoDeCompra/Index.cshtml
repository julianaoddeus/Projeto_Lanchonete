@model CarrinhoDeCompraViewModel


<div class="container">
    <div class="row">
        <div class="d-flex align-items-center">
            <img src="~/imagens/carrinho/cart3.svg" style="width:80px;" />
            <h3>Carrinho de compra</h3>
        </div>
        <div class="mt-3">
            @foreach (var item in Model.CarrinhoDeCompra.CarrinhoCompraItens)
            {
                <ul class="list-group m-1">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <img style="width:4rem;" src="@item.Lanche.ImagemThumbmailUrl" />
                        <div class="col-sm-12 col-md-3 ms-2 me-auto" style="min-width: 150px;">
                            <div class="fw-bold">@item.Lanche.Nome</div>
                            Preço: @item.Lanche.Preco.ToString("c");
                        </div>
                        <div class="col-sm-12 col-md-3 input-group mb-3">
                            <button class="btn btn-outline-secondary" type="button">-</button>
                            <input type="number" value="@item.Quantidade" style="width:2rem; text-align: center;">
                            <button class="btn btn-outline-secondary" type="button">+</button>
                        </div>
                        <div class="col-sm-12 col-md-3">
                            <a asp-controller="CarrinhoDeCompra" asp-action="RemoverItemDoCarrinhoDeCompra" asp-route-lancheId="@item.Lanche.Id">
                                <img style="width:25px; padding: 3px;" src="~/imagens/carrinho/trash.svg" />
                            </a>
                        </div>
                    </li>
                </ul>
            }
        </div>
        <table class="table">
            <tr>
                <th scope="col" class="pull-right">Total @Model.CarrinhoDeCompraTotal.ToString("c")</th>
            </tr>
        </table>

        <div class="btn-group" role="group" aria-label="Basic outlined example">
            <a class="btn btn-outline-danger" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            <a class="btn btn-outline-success" asp-controller="Lanche" asp-action="NossosLanches">Continuar Comprando</a>
        </div>

    </div>
</div>