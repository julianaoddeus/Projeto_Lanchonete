
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </button>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="NossosLanches" style="color: black;"
                   asp-route-categoria="@categoria.Nome">@categoria.Nome</a>
            </li>
        }
        <li><hr class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="NossosLanches" asp-route-categoria=""  style="color: black;">Todos os Lanches</a>
        </li>

    </ul>
</div>